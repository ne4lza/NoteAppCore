@model List<NoteApp.Service.Models.Note>
@{
    ViewData["Title"] = "Index";
}
<div class="d-sm-flex align-items-center lmb-4 p-3">
    <h1 class="h3 mb-0 text-gray-800">Notlarım</h1>

    <a class="btn btn-outline-primary ml-5" href="/Main/AddNote">Yeni Not Ekle</a>
</div>
<br />
<br />
@foreach (var item in Model)
{
    <div class="col-xl-3 col-md-6 mb-4">
        
        <div class="card border-left-primary shadow h-100 py-2 p-2">
            <p><b>@item.CreatedDate</b></p>
            <div class="row p-3 ">
                <a href="/Main/UpdateNote/@item.Id"> <i class="fa fa-pen ml-3"></i></a>
                <a href="/Main/RemoveNote/@item.Id"><i class="fa fa-trash ml-3"></i></a>
            </div>
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            @item.Title
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@item.Content</div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

}
